@{
    ViewBag.Title = "Login";
}

<div class="flex-center">
    <div class="col-md-9">
        <img class="flex-center" id="img_background_login" src="~/Img/qatarLogin.jpg">

    </div>

    <div class="col-md-3">
        <h2 id="lbl_title" for="">BET PROJECT</h2>
        <form>
            <div class="form-group">
                <label for="inputUser">Usuario</label>
                <input type="number" class="form-control" id="inputUser" aria-describedby="Help" placeholder="Ingrese su usuario">
                <small id="Help" class="form-text text-muted">Recuerde que su usuario es unico e instransferible</small>
            </div>
            <div class="form-group">
                <label for="inputPassword">Contraseña</label>
                <input type="password" class="form-control" id="inputPassword" placeholder="Contraseña">
            </div>
            <button type="button" onclick="validate()" class="btn btn-primary btn-block">INGRESAR</button>
            <span id="spanMessage"></span>
        </form>
    </div>
</div>

<style>
    body {
        margin: 0;
        text-align: center;
        background-color: black;
    }
</style>